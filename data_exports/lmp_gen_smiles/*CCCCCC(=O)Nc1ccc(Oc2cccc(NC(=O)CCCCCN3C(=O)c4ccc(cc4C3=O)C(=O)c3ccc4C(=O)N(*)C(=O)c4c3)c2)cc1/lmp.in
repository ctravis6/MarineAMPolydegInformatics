# LAMMPS input file generated by NNMDKit

### Initialization
atom_style      full
units           real
read_data       <module 'skimage.data' from '/Users/carlytravis/opt/anaconda3/envs/my_pymatgen/lib/python3.9/site-packages/skimage/data/__init__.py'>
include         system.in.settings


### Equilibration
dump            dump1 all custom 10000 equil.lammpstrj id mol type q xs ys zs ix iy iz
restart         450000 equilibrated.restart

fix             step1 all nvt temp 800 800 $(100.0*dt)
run             50000
unfix           step1

fix             step2 all npt temp 400 400 $(100.0*dt) iso 100 100 $(100.0*dt)
run             50000
unfix           step2

fix             step3 all npt temp 400 400 $(100.0*dt) iso 1 1 $(100.0*dt)
run             50000
unfix           step3

fix             step4 all nvt temp 800 800 $(100.0*dt)
run             50000
unfix           step4

fix             step5 all npt temp 400 400 $(100.0*dt) iso 100 100 $(100.0*dt)
run             50000
unfix           step5

fix             step6 all npt temp 400 400 $(100.0*dt) iso 1 1 $(100.0*dt)
run             50000
unfix           step6

fix             step7 all nvt temp 800 800 $(100.0*dt)
run             50000
unfix           step7

fix             step8 all npt temp 400 400 $(100.0*dt) iso 100 100 $(100.0*dt)
run             50000
unfix           step8

fix             step9 all npt temp 400 400 $(100.0*dt) iso 1 1 $(100.0*dt)
run             50000
unfix           step9

undump          dump1
reset_timestep  0


### Production - Tg measurement
dump            dump2 all custom 10000 production.lammpstrj id mol type q xs ys zs ix iy iz
restart         100000 production.restart
variable        Rho equal density
variable        Temp equal temp
fix             fDENS all ave/time 250 100 100000 v_Temp v_Rho file temp_vs_density

label           loop
variable        a loop 16
variable        b equal 400-20*($a-1)
fix             fNPT all npt temp $b $b $(100.0*dt) iso 1 1 $(100.0*dt)
run             100000
unfix           fNPT
next            a
jump            SELF loop
variable        a delete
